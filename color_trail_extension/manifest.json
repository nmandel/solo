{
  "manifest_version": 2,

  "name": "Color Trail",
  "description": "This extension adds a trail of color behind your mouse pointer.",
  "version": "1.0",
  
  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["trail.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png"
  }
}